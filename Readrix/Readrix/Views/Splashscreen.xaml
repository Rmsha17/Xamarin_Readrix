<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Readrix.Views.Splashscreen" 
             xmlns:forms="clr-namespace:Lottie.Forms;assembly=Lottie.Forms" BackgroundImageSource="gradient_cyan.png" 
             >
    <ContentPage.Content>
 <StackLayout>
      <BoxView 
       HeightRequest="4"
       Color="Black"
       Margin ="0, 10, 0, 0"/>
            <Grid>
              
     <BoxView
      VerticalOptions="EndAndExpand" HorizontalOptions="StartAndExpand"
        WidthRequest="4" HeightRequest="1200" Margin="10,-20,0,-100" Color="Black"/>

    <forms:AnimationView
    x:Name="animationView"
    Animation="robot.json"
    AutoPlay="True"
    RepeatCount="3"           
    RepeatMode="Infinite" HorizontalOptions="CenterAndExpand" 
    HeightRequest="700" Margin="25,30,0,0"
    WidthRequest="500"/>

                <BoxView
    VerticalOptions="Fill" HorizontalOptions="EndAndExpand"
        WidthRequest="4" HeightRequest="1200" Margin="0,-20,10,-100" Color="Black"/>
    </Grid>
    <BoxView 
    HeightRequest="4"
    Color="Black"
    Margin ="0, 80, 0, 10"/>
    </StackLayout>
    </ContentPage.Content>
</ContentPage>