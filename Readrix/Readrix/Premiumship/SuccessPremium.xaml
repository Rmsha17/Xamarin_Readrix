<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Readrix.Premiumship.SuccessPremium" Title="Payment Confirmed" BackgroundImageSource="bb1">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Padding="14">
            <Image Source="confirm.png" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" HeightRequest="100" />
            <Label/>
            <Label HorizontalOptions="CenterAndExpand" TextColor="Black" Text="Congratulation! Your Payment has been Confirmed. You can Continue Reading our latest Artifacts.Thank you" />
            <Label />
            <Button x:Name="btnCurrentLocation" Clicked="btnCurrentLocation_Clicked" Text="Continue Reading?" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>