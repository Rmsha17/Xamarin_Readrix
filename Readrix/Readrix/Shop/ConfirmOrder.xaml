<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Readrix.Shop.ConfirmOrder" Title="Order Confirmation"  BackgroundImageSource="bb1">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Padding="14" >
                <Image Source="confirmed.png " HeightRequest="120" WidthRequest="120"/>
                <Label/>
                <Label HorizontalOptions="CenterAndExpand" TextColor="Black" Text="The Last Step! Your order is almost ready please confirm this order with cash on delivery mode?" />
                <Label />
                <Button x:Name="btnCurrentLocation" Clicked="btnCurrentLocation_Clicked" Text="Confirm Order" Padding="14" />
            </StackLayout>

        </ScrollView>
    </ContentPage.Content>
</ContentPage>