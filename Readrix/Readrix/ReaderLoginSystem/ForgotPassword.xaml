<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Readrix.ReaderLoginSystem.ForgotPassword" Title="Forgot Password" BackgroundImageSource="bb1">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout  Padding="24" VerticalOptions="CenterAndExpand" >
                <Label />
                <Image Source="imagesremovebgpreview.png"/>
                <Label/>
                <Entry x:Name="txtEmailReset" Keyboard="Email" Placeholder="Enter Your Email" IsSpellCheckEnabled="True" IsTabStop="True" IsTextPredictionEnabled="True" ReturnType="Done" />
                <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                    <Button x:Name="btnReset" Clicked="btnReset_Clicked" Text="Get Password" />


                </StackLayout>
            </StackLayout>
        </ScrollView>

    </ContentPage.Content>
</ContentPage>