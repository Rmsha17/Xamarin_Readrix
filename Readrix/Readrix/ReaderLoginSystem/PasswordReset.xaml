<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Readrix.ReaderLoginSystem.PasswordReset" Title="New Password" BackgroundImageSource="bb1">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout  Padding="24,0,24,0" VerticalOptions="CenterAndExpand" >
                <Label />
                <Image Source="imagesremovebgpreview.png"/>
                <Label/>
                <Entry x:Name="txtpassword" Keyboard="Text" Placeholder="Enter new Password"  IsTabStop="True"  ReturnType="Done" />
                <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                    <Button x:Name="btnReset" FontSize="Medium" Clicked="btnReset_Clicked" Text="Set Password" />
                </StackLayout>
            </StackLayout>
        </ScrollView>

    </ContentPage.Content>
</ContentPage>